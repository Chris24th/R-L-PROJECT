    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug on Docker",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "log": true,
            "externalConsole": false,
            "pathMappings": {
                "/var/www/backend": "${workspaceFolder}/src/backend"
            },
            "ignore": [
                "**/vendor/**/*.php"
            ],
            "cwd": "${workspaceRoot}"
        }
    ]
}
